<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="APTRI Labs"
        android:textSize="30dp"
        android:gravity="center"/>
<Button
    android:background="@drawable/button_states"
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Add Training"

    android:onClick="addtraining"/>

    <Button
        android:background="@drawable/button_states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="addnewadmin"
        android:text="Add New Admin"/>
    <Button
        android:background="@drawable/button_states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="addnewadmin"

        android:text="Add New Faculty"/>
<Button
    android:background="@drawable/button_states"
android:layout_width="match_parent"
    android:layout_marginTop="5dp"
android:layout_height="wrap_content"
android:onClick="seeresult"
android:text="See Feedbacks"/>

    <Button
        android:background="@drawable/button_states"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:onClick="seeattendance"

        android:text="See Attendance"/>

    <Button
        android:background="@drawable/button_states"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:onClick="deletetraining"

        android:text="Delete Training"/>

    <Button
        android:background="@drawable/button_states"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:onClick="deleteatt"

        android:text="Delete Attendance"/>
    <Button
        android:background="@drawable/button_states"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:onClick="deletefeedback"

        android:text="Delete Feedback"/>


    <Button
        android:background="@drawable/button_states"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:onClick="logout"
        android:text="Log Out"/>
</LinearLayout>
</ScrollView>